# VaulTLS Production Environment Configuration
# Copy this file to .env.production and update the values

# Database Configuration
POSTGRES_PASSWORD=your-secure-database-password-here
POSTGRES_USER=vaultls
POSTGRES_DB=vaultls

# Application Security
JWT_SECRET=your-very-secure-jwt-secret-minimum-32-characters
REDIS_PASSWORD=your-secure-redis-password-here

# Domain Configuration
DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com

# SSL Configuration (if using container-level SSL)
SSL_CERT_PATH=/certs/fullchain.pem
SSL_KEY_PATH=/certs/privkey.pem

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=vaultls-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info

# Email Configuration (for notifications)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=VaulTLS <noreply@yourdomain.com>

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Feature Flags
LEGACY_API_ENABLED=false
API_DOCS_REQUIRE_AUTH=true
AUDIT_ENABLED=true

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://yourdomain.com/csp-report
